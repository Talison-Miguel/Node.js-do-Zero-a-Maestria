<h1>Editar Produto</h1>

<form action="/products/edit" method="post">
<input type="hidden" name="_id" value="{{product._id}}">
    <div class="form-control">
        <label for="name">Nome do produto:</label>
        <input type="text" name="name" placeholder="Digite o nome" value="{{product.name}}">
    </div>
    <div class="form-control">
        <label for="price">Preço do produto:</label>
        <input type="text" name="price" placeholder="Digite o preço" value="{{product.price}}">
    </div>
    <div class="form-control">
        <label for="description">Descrição do produto:</label>
        <textarea name="description" placeholder="Digite a descrição do produto">{{product.description}}</textarea>
    </div>
    <div class="form-control">
        <label for="image">Imagem do produto:</label>
        <input type="text" name="image" placeholder="Insira a URl da imagem" value="{{product.image}}"/>
    </div>
    <input type="submit" value="Editar" class="btn">
</form>