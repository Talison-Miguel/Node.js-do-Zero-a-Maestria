<h1>Criar Produto</h1>

<form action="/products/create" method="post">
    <div class="form-control">
        <label for="name">Nome do produto:</label>
        <input type="text" name="name" placeholder="Digite o nome">
    </div>
    <div class="form-control">
        <label for="price">Preço do produto:</label>
        <input type="text" name="price" placeholder="Digite o preço">
    </div>
    <div class="form-control">
        <label for="description">Descrição do produto:</label>
        <textarea name="description" placeholder="Digite a descrição do produto"></textarea>
    </div>
    <div class="form-control">
        <label for="image">Imagem do produto:</label>
        <input type="text" name="image" placeholder="Insira a URl da imagem"/>
    </div>
    <input type="submit" value="Cadastrar" class="btn">
</form>