<h1>Lista de produtos</h1>

<div class="products">
    {{#each products}}
        <div class="product">
            <img src="{{this.image}}" alt="{{this.name}}">
            <h3>{{this.name}}</h3>
            <p>R$ {{this.price}}</p>
            <div class="actions">
                <a href="/products/edit/{{this._id}}">Editar</a>
                <a href="/products/{{this._id}}">Ver Detalhes</a>
            </div>
        </div>
    {{/each}}
</div>